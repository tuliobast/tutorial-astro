---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../style/global.css';

const pageTitle = "About me";
const identity = {
  firstName: "Tulio",
  country: "Argentina",
  occupation: "Telecommunication Engineer",
  hobbies: ["photography", " web developer", "Christ"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Python"];  
const happy = true;
const finished = false;
const goal = 3;
const skillDarkColor = "#dfb600"
const skillLightColor = "#150ad6";
const fontWeight = "bold";
const textCase = "uppercase";

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
    <style define:vars={{skillLightColor, skillDarkColor, fontWeight, textCase}}>
      .skill {
        color:  var(--skillLightColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
      }
      .dark .skill {
        color: var(--skillDarkColor);

      }
    </style>
	</head>
	<body>
    <BaseLayout pageTitle={ pageTitle }>
      <h2>... ¡And my new Astro website!</h2>
    
      <p>I working on the introductory Astro tutorial. this is second page of my website,
        ¡And it's the first one I've built myself!</p>
      
      <p>This site will be updated as I complete more parts of the tutorial, so be sure 
        to check back to see how my journey is going!</p>
      <p>Here are a few facts about me:</p>
      <ul>
        <li>My name is {identity.firstName}.</li>
        <li>I live in {identity.country} and I work as a {identity.occupation}.</li>
        {identity.hobbies.length >= 2 &&
          <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
        }
      </ul>
      <p>My skills are:</p>
      <ul>
        {skills.map((skill) => <li class="skill">{skill}</li>)}
      </ul> 
      {happy && <p>I am happy to be learning Astro!</p>}
      {finished && <p>I finished this tutorial!</p>}
      {goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days.</p>}
    </BaseLayout>  
  </body>
</html>
